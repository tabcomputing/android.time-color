<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tabcomputing.wallpaper"
    android:sharedUserId="tabcomputing.wallpaper">

    <!--
     Required to act as a custom watch face.
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    -->

    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true">
    </uses-feature>

    <application
        android:icon="@mipmap/ic_launcher"
        android:description="@string/app_description"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:theme="@style/AppTheme">

        <activity
            android:icon="@mipmap/ic_launcher"
            android:name=".BrowserActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        <activity
            android:name="tabcomputing.library.paper.BroadcastSettingsActivity"
            android:label="@string/app_name"
            android:exported="true" />
        -->

        <activity
            android:name=".ClockSettingsActivity"
            android:label="@string/app_name"
            android:exported="true" />

        <activity
            android:name=".ClockActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:parentActivityName=".BrowserActivity"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_browser"
            android:theme="@style/FullscreenTheme">
        </activity>

    </application>

</manifest>
