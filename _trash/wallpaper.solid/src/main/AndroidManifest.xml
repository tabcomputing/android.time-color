<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="tabcomputing.wallpaper.solid">
    <application>
        <service
            android:name=".Wallpaper"
            android:label="@string/solid_label"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="true"
            android:enabled="true">  <!-- free -->
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:label="@string/solid_label"
                android:thumbnail="@drawable/solid_thumbnail"
                android:resource="@xml/solid_wallpaper">
            </meta-data>
        </service>
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/solid_label">
        </activity>
    </application>
</manifest>
