<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="tabcomputing.wallpaper.bigtime">
    <application>
        <service
            android:name=".Wallpaper"
            android:label="@string/bigtime_label"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="true"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.service.bigtime_wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data
                android:name="android.service.bigtime_wallpaper"
                android:label="@string/bigtime_label"
                android:thumbnail="@drawable/bigtime_thumbnail"
                android:resource="@xml/bigtime_wallpaper">
            </meta-data>
        </service>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/bigtime_label"
            android:exported="true" >
        </activity>
    </application>
</manifest>
