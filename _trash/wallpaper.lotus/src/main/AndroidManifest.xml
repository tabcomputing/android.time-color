<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="tabcomputing.wallpaper.lotus">
    <application>
        <service
            android:name=".Wallpaper"
            android:label="@string/lotus_label"
            android:permission="android.permission.BIND_WALLPAPER"
            android:exported="true"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService"/>
            </intent-filter>
            <meta-data
                android:name="android.service.wallpaper"
                android:label="@string/lotus_label"
                android:thumbnail="@drawable/lotus_thumbnail"
                android:resource="@xml/lotus_wallpaper">
            </meta-data>
        </service>
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/lotus_label" >
        </activity>
    </application>
</manifest>
